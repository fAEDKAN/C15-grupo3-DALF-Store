<!DOCTYPE html>
<html lang="en">
<!-- H E A D -->
<%- include('./partials/head',{ title:'home', }) %>
<!-- / H E A D -->
<body id="index">
    <!-- H E A D E R -->
    <%- include('./partials/header',{ title:'home', }) %>
    <!-- / H E A D E R -->
    <!-- M A I N -->
    <main class="main__content">
        <div id="carouselExampleIndicators"  style="margin-bottom: 0px;" class="carousel slide" data-bs-ride="true">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/images/banners/banner-ofertas-semanales.jpg" class="d-block w-100 main--img-banner" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="/images/banners/banner-descuento-nuevos.jpg" class="d-block w-100 main--img-banner" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="/images/banners/banner-reserva-precio.jpg" class="d-block w-100 main--img-banner" alt="...">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                <span class="carousel-control-prev-icon main-carousel-button" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                <span class="carousel-control-next-icon main-carousel-button" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>

        <h2>Productos Recomendados</h2>
        <section class="main__section--product ">
            <% productsRecommended.forEach(({id, name, price, image, discount})=> { %>
                <%- include("./partials/product",{id, name, price, image, discount, toThousand }) %>
                <% }) %>
        </section>
        <div class="main-content-buttom"><a href="/section/2"><button class="main-display-button">Ver más</button></a></div>

        <div id="carouselExampleCaptions" style="margin-bottom: 0px;" class="carousel slide second-carousel--banner" data-bs-ride="false">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner second-carousel--banner">
                <div class="carousel-item active">
                    <img src="/images/banners/ofertas-de-navidad.jpg" class="d-block w-100 main--img-banner" alt="">
                    <div class="carousel-caption d-none d-md-block main--carousel-p-color">
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="/images/banners/juegos-menos-de-1000.jpg" class="d-block w-100 main--img-banner" alt="">
                    <div class="carousel-caption d-none d-md-block main--carousel-p-color">
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="/images/banners/10off-adicional.jpg" class="d-block w-100 main--img-banner" alt="">
                    <div class="carousel-caption d-none d-md-block main--carousel-p-color">
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                <span class="carousel-control-prev-icon main-carousel-button" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                <span class="carousel-control-next-icon main-carousel-button" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>

        <h2>Productos en Oferta</h2>
        <section class="main__section--product">
            <% productsInSale.forEach(({id, name, price, image, discount})=> { %>
                <%- include("./partials/product",{id, name, price, image, discount, toThousand }) %>
                <% }) %>
        </section>
        <div class="main-content-buttom"><a href="/section/1"><button class="main-display-button">Ver más</button></a></div>

<!--         <h2>Producto de nuestros usuarios</h2>
        <section class="main__section--product">
            <% productsOfUsers.forEach(({id, name, price, image, discount})=> { %>
                <%- include("./partials/product",{id, name, price, image, discount, toThousand }) %>
                <% }) %>
        </section>
        <div class="main-content-buttom"><button class="main-display-button ">Ver más</button></div> -->
    </main>
    <!-- / M A I N -->
    <!-- F O O T E R -->
    <%- include('./partials/footer',{ title:'home', }) %>
    <!-- / F O O T E R -->
    <!-- SCRIPTS -->
    <script>
        const myCarouselElement = document.querySelector('#carouselExampleIndicators #carouselExampleControls')
        const carousel = new bootstrap.Carousel(myCarouselElement, {
            interval: 999999,
        })
    </script>
    <!-- / SCRIPTS -->
</body>

</html>
