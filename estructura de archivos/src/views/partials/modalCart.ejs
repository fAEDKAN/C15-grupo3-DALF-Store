<!-- Modal -->
<div class="modal fade" id="cartModal" tabindex="-1" aria-labelledby="cartModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="cartModalLabel">Carrito de compras</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <% if (!locals.userLogin) { %>
          <p class="cart-guest">Debes iniciar sesion para acceder a tu carrito de compras</p>
         <% } else { %>
          <div class="modal-body" id="box-cart">
          <table class="table" id="cart-box">
            <thead>
              <tr>
                <th scope="col">Imagen</th>
                <th scope="col">Producto</th>
                <th scope="col">Cantidad</th>
                <th scope="col">Precio</th>
                <th scope="col">Subtotal</th>
              </tr>
            </thead>
            <tbody id="cart-items">
             
            </tbody>
          </table>
        </div>
        <div class="modal-footer">
            <div class="d-flex justify-content-between gap-2">
                <button type="button" class="btn btn-cart-itemRemove" onclick="remove()">Vaciar carrito</button>
 
                <div class="d-flex gap-2">
                    <button type="button" class="btn btn-cart-itemAdd" onclick="window.location.href='/'" data-bs-dismiss="modal">Seguir comprando</button>
                    <button type="button" class="btn btn-cart-itemAdd">Terminar compra</button>
                </div>
            </div>
        
        </div>
        <% } %>
      </div>
    </div>
    <script src="../../../javascripts/cart.js"></script>
  </div>
  
  