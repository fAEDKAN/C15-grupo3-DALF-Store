<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head',{ title:'home', }) %>

    <body class="carrito">
        <%- include('../partials/header',{ title:'home', }) %>
            <main class="carrito__main">
                <section class="carrito__main__section--productos">
                    <div class="products-caja2">

                        <p class="carrito__main__section--pruductos-title">Metodos de pago</p>
                        <div class="linea">
                            <hr>
                        </div>
                        <form action="/cartPay" method="POST">
                            <div class="form-box">
                                <label class="form__label" for="">Nombre</label>
                                <input type="text" name="nameSurname" id="entero" placeholder="Nombre y apellido">
                            </div>
                            <div class="form-box">
                                <label class="form__label" for="">Nro de tarjeta</label>
                                <input type="number" name="numberCard" id="entero" placeholder="Numero de tarjeta">
                            </div>
                            <p id="expira">Expira</p>
                            <div class="form-box">
                                <label class="form__label" for="">Vencimiento</label>
                                <input type="date" name="fecha" id="entero" value="DD/MM/AAAA">
                            </div>
                            <div class="form-box">
                                <label class="form__label" for="">CVC</label>
                                <input type="password" name="clave" id="entero" placeholder="CVC">
                            </div>

                        </form>
                        <div class="total">
                            <div>
                                <p class="total-productos">Productos</p>
                                <p class="total-cantidad">$0</p>
                            </div>
                            <div>
                                <p class="total-envio">Envio</p>
                                <p class="total-cantidad">$0</p>
                            </div>
                            <div>
                                <p class="total-total">Total</p>
                                <p class="total-total-cantidad">$0</p>
                            </div>
                            <img src="/images/medios-de-pago-1723294542" alt="">
                            <div class="total-comprar">
                                <button><a href="/cartPay">Comprar</a></button>
                            </div>
                        </div>
                    </div>

                </section>
                <section class="carrito__main__section--pruductos-recomendados">
                    <p class="carrito__main__section--pruductos-title">Productos que pueden interesarte</p>
                    <div class="linea">
                        <hr>
                    </div>
                    <article class="productos-recomendados">
                        <div class="glider-contain">
                            <div class="glider">
                                <div>
                                    <a href=""><img src="/images/xbox-key.jpeg" alt=""></a>
                                </div>
                                <div>
                                    <a href=""><img src="/images/xbox-key.jpeg" alt=""></a>
                                </div>
