<!DOCTYPE html>
<html lang="en">
    <!-- H E A D -->
    <%- include('../partials/head',{ title:'home', }) %>
        <!-- / H E A D -->

        <body class="products">
            <!-- H E A D E R -->
            <%- include('../partials/header',{ title:'home', }) %>
                <!-- M A I N -->
                <main id="products__main">
                    <div class="products-caja">
                        <div class="">
                            <h3 class="products-titulo">Editar producto</h3>
                        </div>
                        <form action="/products/update/<%= productToEdit.id %>?_method=PUT" method="POST">
                            <div class="form-box">
                                <label class="form__label" for="name">Título:</label>
                                <input class="form__input" type="text"
                                    id="name" autocomplete="off"
                                    name="name" placeholder="Título del
                                    producto" value="<%= productToEdit.name %>">
                                <!-- <small class="form__text--error">El nombre es obligatorio</small> -->
                            </div>

                            <div class="form-box">
                                <label class="form__label">Categorías:</label>
                                <select name="categoria" id="">
                                    <option value="accion" hidden selected>Seleccionar
                                        categoría...</option>
                                    <option value="accion">Acción</option>
                                    <option value="aventura">Aventura</option>
                                    <option value="ftp/tps">FTP/TPS</option>
                                    <option value="rpg">RPG</option>
                                    <option value="simulacion">Simulación</option>
                                    <option value="carreras">Carreras</option>
                                    <option value="lucha">Lucha</option>
                                    <option value="mmo">MMO</option>
                                    <option value="arcade">Arcade</option>
                                    <option value="otro">Otro</option>
                                </select>
                            </div>

                            <div class="form-box">
                                <label class="form__label" for="price">Precio:</label>
                                <input class="form__input" type="number" id="price"
                                    name="price" placeholder="Precio del
                                    producto" value="<%= productToEdit.price %>">
                                <!-- <small class="form__text--error">Solo se aceptan numeros en este campo</small> -->
                            </div>

                            <div class="form-box">
                                <label class="form__label">Descuento:</label>
                                <input type="text" id="discount" placeholder="Ej: 5" value="<%= productToEdit.discount %>">
                            </div>

                            <div class="form-box">
                                <label class="form__label" for="description">Descripción:</label>
                                <textarea name="description" id="description" cols="30" rows="5" minlength="20" maxlength="250" value="<%= productToEdit.description %>"></textarea>
                            </div>

                            <div class="form-box">
                                <label class="form__label">Companía:</label>
                                <select name="descuento" id="">
                                    <option value="1" hidden selected>Seleccionar...</option>
                                    <option value="2">Xbox</option>
                                    <option value="3">Microsoft</option>
                                    <option value="5">Steam</option>
                                    <option value="8">PSN</option>
                                    <option value="6">Ubisoft</option>
                                    <option value="7">Battle.net</option>
                                    <option value="">Otro</option>
                                </div>

                            </div>

                            <div class="form-box load-image">
                                <label class="form__label" for="imagen">Añadir
                                    Imágenes:</label>
                                <input type="file" name="imagen" accept=".jpg"
                                    multiple>
                            </div>

                            <div class="form-box buttons">
                                <button class="total-comprar" type="reset">Cancelar</button>
                                <button class="total-comprar" type="submit">Confirmar</button>
                            </div>

                        </form>
                    </div>
                </main>
                <!-- / M A I N -->
                <!-- F O O T E R -->
                <%- include('../partials/footer',{ title:'home', }) %>
                    <!-- / F O O T E R -->
                </body>

            </html>